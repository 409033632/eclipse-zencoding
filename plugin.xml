    <page
          class="ru.zencoding.eclipse.preferences.output.CSSOutputPreferencePage"
          id="ru.zencoding.eclipse.preferences.CSSPreferencesPage"
          name="CSS"
          category="ru.zencoding.eclipse.preferences.OutputPreferencesPage">
    </page>
    <page
          class="ru.zencoding.eclipse.preferences.output.XMLOutputPreferencePage"
          id="ru.zencoding.eclipse.preferences.XMLPreferencesPage"
          name="XML"
          category="ru.zencoding.eclipse.preferences.OutputPreferencesPage">
    </page>
    <page
          class="ru.zencoding.eclipse.preferences.output.XSLOutputPreferencePage"
          id="ru.zencoding.eclipse.preferences.XSLPreferencesPage"
          name="XSL"
          category="ru.zencoding.eclipse.preferences.OutputPreferencesPage">
