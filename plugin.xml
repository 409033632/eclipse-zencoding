    <!-- Output preferences -->
    <page
          class="ru.zencoding.eclipse.preferences.output.DefaultOutputPreferencePage"
          id="ru.zencoding.eclipse.preferences.OutputPreferencesPage"
          name="Output"
          category="ru.zencoding.eclipse.preferences.EclipseZenCodingPreferencePage">
    </page>
    <page
          class="ru.zencoding.eclipse.preferences.output.HTMLOutputPreferencePage"
          id="ru.zencoding.eclipse.preferences.HTMLPreferencesPage"
          name="HTML"
          category="ru.zencoding.eclipse.preferences.OutputPreferencesPage">
