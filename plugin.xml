 </extension>
 <extension
       point="org.eclipse.core.runtime.preferences">
    <initializer
          class="ru.zencoding.eclipse.preferences.PreferenceInitializer">
    </initializer>
 </extension>
 
 <extension point="org.eclipse.ui.editors.templates">
         <contextType
               class="ru.zencoding.eclipse.ZenCodingContextType"
               id="ru.zencoding.eclipse.templates.html"
               name="HTML"/>
         <contextType
               class="ru.zencoding.eclipse.ZenCodingContextType"
               id="ru.zencoding.eclipse.templates.css"
               name="CSS"/>
         <contextType
               class="ru.zencoding.eclipse.ZenCodingContextType"
               id="ru.zencoding.eclipse.variable"
               name="Variable"/>
               
         <template
            autoinsert="false"
            name="lang"
            description=""
            contextTypeId="ru.zencoding.eclipse.variable"
            id="ru.zencoding.eclipse.variable.lang">
			<pattern>en</pattern>
		</template>
        <template
            autoinsert="false"
            name="locale"
            description=""
            contextTypeId="ru.zencoding.eclipse.variable"
            id="ru.zencoding.eclipse.variable.locale">
			<pattern>en-US</pattern>
		</template>
        <template
            autoinsert="false"
            name="charset"
            description=""
            contextTypeId="ru.zencoding.eclipse.variable"
            id="ru.zencoding.eclipse.variable.charset">
			<pattern>UTF-8</pattern>
		</template>
    </extension>

</plugin>
